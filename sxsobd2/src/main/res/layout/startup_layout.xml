<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="TouchTargetSizeCheck,UsingOnClickInXml,TextContrastCheck">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/connect_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/action_connect"
        android:textColor="@color/white"
        app:icon="@drawable/bluetooth_icon"
        tools:ignore="TextContrastCheck"
        app:backgroundTint="@color/amber"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/backgroundImage_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/engine_icon"
        android:contentDescription="@string/background"
        android:layout_marginBottom="140dp"
        />

    <com.github.anastr.speedviewlib.DeluxeSpeedView
        android:id="@+id/speedView"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        app:sv_unit="%\t LOADING..."
        app:sv_withTremble="true"
        app:sv_textSize="12pt"
        app:sv_speedTextSize="12pt"
        app:sv_unitTextSize="12pt"
        android:layout_above="@+id/textLayout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:id="@+id/textLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#40000000"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:text="@string/app_name"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/amber"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:text="@string/app_version"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/amber"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/denommeinc"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/amber" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="browseClickedUrl"
            android:text="@string/email"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/amber"
            android:layout_marginBottom="20dp"
             />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>

</RelativeLayout>
